{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda askfreshpad",
  "Parameters": {
    "AppName": {
      "Description": "App name",
      "Type": "String",
      "Default": "askfreshpad"
    },
    "EnvironmentTag": {
      "Description": "Environment of the Stack",
      "Type": "String"
    },
    "S3BucketName": {
      "Description": "Name of S3 for the artifact",
      "Type": "String",
      "Default": "freshpad"
    },
    "Handler": {
      "Description": "The java handler for the Lambda function",
      "Type": "String",
      "Default": "index.handler"
    },
    "LambdaRuntime": {
      "Description": "Virtual Runtime for the lambda function",
      "Type": "String",
      "Default": "nodejs4.3"
    },
    "LambdaMemorySize": {
      "Description": "Memory size for the lambda function",
      "Type": "Number",
      "Default": 512
    },
    "LambdaTimeout": {
      "Description": "Timeout for the lambda function",
      "Type": "Number",
      "Default": 60
    }
  },
  "Resources": {
    "SessionTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::Join": [
            ".",
            [
              "freshpad",
              {
                "Ref": "EnvironmentTag"
              },
              "asksession"
            ]
          ]
        },
        "AttributeDefinitions": [
          {
            "AttributeName": "userId",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "userId",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "1",
          "WriteCapacityUnits": "1"
        }
      }
    },
    "Function": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Description": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AppName"
              },
              {
                "Ref": "EnvironmentTag"
              }
            ]
          ]
        },
        "Code": {
          "S3Bucket": {
            "Ref": "S3BucketName"
          },
          "S3Key": {
            "Fn::Join": [
              "",
              [
                "lambda/",
                {
                  "Ref": "AppName"
                },
                "/",
                {
                  "Ref": "EnvironmentTag"
                },
                ".zip"
              ]
            ]
          }
        },
        "Handler": {
          "Ref": "Handler"
        },
        "MemorySize": {
          "Ref": "LambdaMemorySize"
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaRole",
            "Arn"
          ]
        },
        "Runtime": {
          "Ref": "LambdaRuntime"
        },
        "Timeout": {
          "Ref": "LambdaTimeout"
        }
      }
    },
    "LambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "MyLambdaPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "MyLambdaPolicy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": "arn:aws:logs:*:*:*"
            },
            {
              "Action": [
                "s3:GetObject"
              ],
              "Effect": "Allow",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:s3:::",
                      {
                        "Ref": "S3BucketName"
                      },
                      "/",
                      {
                        "Ref": "EnvironmentTag"
                      },
                      "/",
                      {
                        "Ref": "AppName"
                      },
                      "/*"
                    ]
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:BatchGetItem",
                "dynamodb:BatchWriteItem",
                "dynamodb:DeleteItem",
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:UpdateItem"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    ":",
                    [
                      "arn",
                      "aws",
                      "dynamodb",
                      {
                        "Ref": "AWS::Region"
                      },
                      {
                        "Ref": "AWS::AccountId"
                      },
                      {
                        "Fn::Join": [
                          ".",
                          [
                            "table/freshpad",
                            {
                              "Ref": "EnvironmentTag"
                            },
                            "asksession"
                          ]
                        ]
                      }
                    ]
                  ]
                }
              ]
            }
          ]
        },
        "Roles": [
          {
            "Ref": "LambdaRole"
          }
        ]
      }
    }
  }
}